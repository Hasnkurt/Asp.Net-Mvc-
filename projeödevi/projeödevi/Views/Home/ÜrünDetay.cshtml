                <h4>@Model.fiyat  ₺</h4>

                <hr />






                <p class="product-quantity">Ürün Adeti: <input value="1" name=""</p>

                <a href="~/sepet/Index" class="btn btn-default" role="button" style="font-size: 14px; right:-20px;"><span1 class="fas fa-shopping-cart"></span1>Sepete Ekle</a>







            </div>
        </div>

    </div>
