@using projeödevi.Models.Entity
@model ürünler


<section>


        <div class="left">
            <div class="bottom-left">
                <div class="col-md-6">
                    <td>

                        <img src="@Model.ürünresmi" style="width: 290px; height: 290px;" alt="...">
                    </td>
                </div>
            </div>

            <div class="col-md-23">

                <p>Ürün Adı</p>
                <h4>@Model.ürünadi</h4>
                <hr />
                <p>Ürün Markası</p>
                <h4>@Model.markalar.markaad</h4>
