@using projeödevi.Models.Entity
@model IEnumerable<ürünler>




    <section>
        <body>
            @foreach (var item in Model)
            {

                <div class="col-sm-6 col-md-4">


                    <div class="thumbnail">
                        <a href="/Ürün/Index?=@item.ürünid"><img src="@item.ürünresmi" style="max-width:210px;max-height:220px;min-width:110px;min-height:120px;" alt=" " class="img-responsive" /></a>

                        <div class="caption" style="text-align: center;">
                            <h3>@item.ürünadi</h3>

                        </div>

                        <div class="üründetay1">
                            <p>
                                <a href="/Ürün//ÜrünDetay/@item.ürünid" class="btn btn-default" role="button"><span1 class="fas fa-eye"></span1></a>
                                <a href="/Cart/EkleÜrün/@item.ürünid" class="btn btn-default" role="button"><span1 class="fas fa-shopping-cart"></span1>Sepete Ekle</a>

                                <a href="#" class="fiyat" role="button"><br />@item.fiyat  ₺</a>

                            </p>

                        </div>
                    
                        </div>
                    </div>

            }

        </body>
    </section>

