@model projeödevi.Models.Entity.kayitol


    @{
        Layout = null;
    }

    <!DOCTYPE html>
    <html lang="en">
    <head>


        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Üye Girişi</title>
        <link href="~/web/startbootstrap-sb-admin-gh-pages/dist/css/styles.css" rel="stylesheet" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
    </head>
    <body class="bg-dark">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Üye Girişi</h3></div>
                                    <div class="card-body">

                                        @if (TempData["Basarisiz"] != null)
                                        {

                                            <div class="alert alert-success" role="alert">
                                                <i class="glyphicon glyphicon-thumbs-up"></i>@TempData["Basarisiz"]
                                            </div>
                                        }

                                        @using (Html.BeginForm("login", "üye", FormMethod.Post))
                                        {


                                            <div class="form-group">
                                                <label class="small mb-1" for="inputFirstName">E-Posta</label>
                                                <input class="form-control py-4 " name="eposta" type="email" placeholder="E-Posta Adresinizi Giriniz" />
                                            </div>

                                            <div class="form-group">
                                                <label class="small mb-1" for="inputPassword">Şifre</label>
                                                <input class="form-control py-4" name="sifre" type="password" placeholder="Şifre Giriniz" />
                                            </div>
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox">
                                                    <input class="custom-control-input" id="rememberPasswordCheck" type="checkbox" />
                                                    <label class="custom-control-label" for="rememberPasswordCheck">Parolayı Hatırla</label>
                                                </div>
                                            </div>
                                            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                                <a class="small" href="~/üye/sifreunuttum">
                                                    Parolanızı mı unuttunuz?
                                                </a>
                                            </div>

                                            <div>
                                                <button class="btn btn-primary">Oturum Aç </button>
                                            </div>

                                        }
                                    </div>

                                    <div class="card-footer text-center">
                                        <div class="small"><a href="~/üye/ÜyeEkle">Bir hesaba mı ihtiyacınız var? Kaydol!</a></div>
                                        <div class="small"><a href="~/Cart/SiparişTamamla"><h5> ÜYE OLMADAN DEVAM ET  </h5></a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <div id="layoutAuthentication_footer">
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Hk Müzik Market &copy;  2021</div>
                            <div>
                                <a href="#">Gizlilik Politikası</a>
                                &middot;
                                <a href="#">Şartlar &amp; Koşullar</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="~/web/startbootstrap-sb-admin-gh-pages/dist/js/scripts.js"></script>
    </body>
</html>


